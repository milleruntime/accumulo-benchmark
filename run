#!/bin/bash
JMH_CMD="java -jar jmh-test/target/benchmarks.jar "
JMH_CP="jmh-test/target/benchmarks.jar "
OUT_FILE="results-`date +%F_%H%M%S`"

usage() {
  echo "$0 [-p|--print] [-i|--iter <num>] [-t|--test <test>]"
  echo "Options:"
  echo "-p|--print         Print all of the available tests"
  echo "-t|--test <test*>  Test(s) to run in JMH. Can use Regex to match multiple tests."
  echo "-i|--iter <num>    Set the number of test iterations"
  echo "-h|--help          Print this help."
  exit
}

while [[ $# -gt 0 ]]
do
case $1 in
    -h|--help)
    usage
    ;;
    -p|--print)
    PRINT_TESTS=YES
    ;;
    -i|--iter)
    ITERATIONS="$2"
    shift 
    ;;
    -t|--test)
    TEST=$2 
    shift
    ;;
    *)
    echo "Unknown option: $1"
    ;;
esac
shift
done

if [[ -n "$PRINT_TESTS" ]]; then
  java -cp $JMH_CP org.apache.accumulo.PrintTests
  exit 0
fi

if [[ -n $TEST ]]; then
  if [[ ! -d "./results" ]]; then
     mkdir ./results
  fi
  #grep "<accumulo.version>" pom.xml | sed 's|</.*n>||g' | sed 's|<.*>||g' > ./results/$OUT_FILE
  uname -rsv >> ./results/$OUT_FILE
  if [[ -n "$ITERATIONS" ]]; then
     $JMH_CMD -f 1 -i "$ITERATIONS" "$TEST" | tee -a ./results/$OUT_FILE
     GOOD=YES
  else
     $JMH_CMD -f 1 "$TEST" | tee -a ./results/$OUT_FILE
     GOOD=YES
  fi
else
  uname -rsv >> ./results/$OUT_FILE
  $JMH_CMD -f 1 | tee -a ./results/$OUT_FILE
  GOOD=YES
fi

if [[ -z "$GOOD" ]]; then
  usage
fi
